<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/shape_corner_radius_12dp_bg"
    android:backgroundTint="@color/primary_transparent"
    >


            <ImageView
                android:id="@+id/iv_recent_profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                android:background="@drawable/shape_circle_background"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_sweetie_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2"
                app:layout_goneMarginStart="16dp" />

            <TextView
                android:id="@+id/tv_recent_name"
                style="@style/headline_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="감우"
                android:textColor="@color/primary"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_recent_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_recent_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_recent_profile" />

            <TextView
                android:id="@+id/tv_recent_number"
                style="@style/subtitle_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="010-0202-0202"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_recent_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_recent_name"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_name" />





</androidx.constraintlayout.widget.ConstraintLayout>