<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_dialog_2"
    tools:context=".AddContactActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <ImageView
                android:id="@+id/iv_add_contact_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_corner_radius_30dp_bg"
                android:clipToOutline="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_name"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_corner_radius_15dp_bg_primary_transparent"
                app:layout_constraintStart_toStartOf="@id/iv_add_contact_image"
                app:layout_constraintTop_toBottomOf="@id/iv_add_contact_image">

                <TextView
                    android:id="@+id/tv_add_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_name"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:paddingTop="12dp"
                    android:paddingStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/cl_add_contact_name"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_name"/>
                <ImageView
                    android:id="@+id/iv_check_okay_name"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_check_okay"
                    android:visibility="invisible"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/tv_add_contact_name"
                    app:layout_constraintTop_toTopOf="@id/tv_add_contact_name"
                    app:layout_constraintBottom_toBottomOf="@id/tv_add_contact_name"/>
                <EditText
                    android:id="@+id/et_add_contact_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_contact_placeholder_name"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textSize="24sp"
                    android:inputType="text"
                    android:fontFamily="@font/yeonaesidae_b"
                    android:paddingTop="8dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_contact_name"
                    app:layout_constraintStart_toStartOf="@id/tv_add_contact_name"/>

                <TextView
                    android:id="@+id/tv_add_contact_wrong_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:text="@string/add_contact_placeholder_wrong_name"
                    android:visibility="invisible"
                    android:layout_marginStart="3dp"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_name"
                    app:layout_constraintTop_toBottomOf="@+id/cl_add_contact_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_main_phone_number"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_corner_radius_12dp_bg"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_name"
                app:layout_constraintBottom_toTopOf="@id/cl_add_contact_phone_number"
                app:layout_constraintEnd_toEndOf="@id/cl_add_contact_name">

            <TextView
                android:id="@+id/tv_add_contact_main_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_contact_main_phone_number"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/yeonaesidae_b"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/iv_add_contact_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check"
                    android:paddingStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_phone_number"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_corner_radius_15dp_bg_primary_transparent"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_name"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_name">
                <TextView
                    android:id="@+id/tv_add_contact_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_phone_number"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:paddingTop="12dp"
                    android:paddingStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/cl_add_contact_phone_number"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number"/>
                <ImageView
                    android:id="@+id/iv_check_okay_phone_number"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_check_okay"
                    android:visibility="invisible"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/tv_add_contact_phone_number"
                    app:layout_constraintTop_toTopOf="@id/tv_add_contact_phone_number"
                    app:layout_constraintBottom_toBottomOf="@id/tv_add_contact_phone_number"/>
                <EditText
                    android:id="@+id/et_add_contact_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_contact_placeholder_phone_number"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:inputType="phone"
                    android:fontFamily="@font/yeonaesidae_b"
                    android:paddingTop="8sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_contact_phone_number"
                    app:layout_constraintStart_toStartOf="@id/tv_add_contact_phone_number"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_contact_wrong_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="@font/yeonaesidae_r"
                android:text="@string/add_contact_placeholder_wrong_phone_number"
                android:visibility="invisible"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number"
                app:layout_constraintTop_toBottomOf="@+id/cl_add_contact_phone_number" />

            <TextView
                android:id="@+id/tv_add_contact_delete_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_contact_delete_phone_number"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/yeonaesidae_b"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/cl_add_contact_phone_number"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_phone_number"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_phone_number_2"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:background="@drawable/shape_corner_radius_15dp_bg_primary_transparent"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number"
                app:layout_constraintTop_toBottomOf="@id/tv_add_contact_delete_phone_number">
                <TextView
                    android:id="@+id/tv_add_contact_phone_number_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_phone_number2"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:paddingTop="12dp"
                    android:paddingStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/cl_add_contact_phone_number_2"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_2"/>
                <ImageView
                    android:id="@+id/iv_check_okay_phone_number_2"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_check_okay"
                    android:visibility="invisible"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/tv_add_contact_phone_number_2"
                    app:layout_constraintTop_toTopOf="@id/tv_add_contact_phone_number_2"
                    app:layout_constraintBottom_toBottomOf="@id/tv_add_contact_phone_number_2"/>
                <EditText
                    android:id="@+id/et_add_contact_phone_number_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_contact_placeholder_phone_number"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:inputType="phone"
                    android:fontFamily="@font/yeonaesidae_b"
                    android:paddingTop="8dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_contact_phone_number_2"
                    app:layout_constraintStart_toStartOf="@id/tv_add_contact_phone_number_2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_contact_wrong_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="@font/yeonaesidae_r"
                android:text="@string/add_contact_placeholder_wrong_phone_number"
                android:visibility="invisible"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_2"
                app:layout_constraintTop_toBottomOf="@+id/cl_add_contact_phone_number_2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_phone_number_3"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_corner_radius_15dp_bg_primary_transparent"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_2"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_phone_number_2"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_add_contact_phone_number_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_phone_number3"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:paddingTop="12dp"
                    android:paddingStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/cl_add_contact_phone_number_3"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_3"/>
                <ImageView
                    android:id="@+id/iv_check_okay_phone_number_3"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_check_okay"
                    android:visibility="invisible"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/tv_add_contact_phone_number_3"
                    app:layout_constraintTop_toTopOf="@id/tv_add_contact_phone_number_3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_add_contact_phone_number_3"/>
                <EditText
                    android:id="@+id/et_add_contact_phone_number_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_contact_placeholder_phone_number"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:inputType="phone"
                    android:fontFamily="@font/yeonaesidae_b"
                    android:paddingTop="8dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_contact_phone_number_3"
                    app:layout_constraintStart_toStartOf="@id/tv_add_contact_phone_number_3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_contact_wrong_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="@font/yeonaesidae_r"
                android:text="@string/add_contact_placeholder_wrong_phone_number"
                android:visibility="invisible"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_3"
                app:layout_constraintTop_toBottomOf="@+id/cl_add_contact_phone_number_3" />

            <TextView
                android:id="@+id/tv_add_contact_add_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/add_contact_add_phone_number"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:fontFamily="@font/yeonaesidae_b"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_3"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_phone_number_3"
                app:layout_constraintBottom_toTopOf="@id/cl_add_contact_relationship"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_relationship"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/shape_corner_radius_15dp_bg_primary_transparent"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_phone_number_3"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_phone_number_3">
                <TextView
                    android:id="@+id/tv_add_contact_relationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_relationship"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:paddingTop="12dp"
                    android:paddingStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/cl_add_contact_relationship"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_relationship"/>

                <Spinner
                    android:id="@+id/group_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="8dp"
                    android:spinnerMode="dropdown"
                    android:theme="@style/SpinnerTheme"
                    app:layout_constraintStart_toStartOf="@+id/tv_add_contact_relationship"
                    app:layout_constraintTop_toBottomOf="@+id/tv_add_contact_relationship" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_contact_wrong_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="@font/yeonaesidae_r"
                android:text="@string/add_contact_placeholder_wrong_relationship"
                android:visibility="invisible"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_relationship"
                app:layout_constraintTop_toBottomOf="@+id/cl_add_contact_relationship" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_add_contact_memo"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/shape_corner_radius_15dp_bg_primary_transparent"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_relationship"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_relationship">

                <TextView
                    android:id="@+id/tv_add_contact_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/yeonaesidae_r"
                    android:paddingStart="20dp"
                    android:paddingTop="12dp"
                    android:text="@string/common_memo"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/cl_add_contact_memo"
                    app:layout_constraintTop_toTopOf="@id/cl_add_contact_memo" />

                <ImageView
                    android:id="@+id/iv_check_okay_memo"
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_check_okay"
                    android:visibility="invisible"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toEndOf="@id/tv_add_contact_memo"
                    app:layout_constraintTop_toTopOf="@id/tv_add_contact_memo"
                    app:layout_constraintBottom_toBottomOf="@id/tv_add_contact_memo"/>

                <EditText
                    android:id="@+id/et_add_contact_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/yeonaesidae_b"
                    android:hint="@string/add_contact_placeholder_memo"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@id/tv_add_contact_memo"
                    app:layout_constraintTop_toBottomOf="@id/tv_add_contact_memo" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_add_contact_wrong_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:fontFamily="@font/yeonaesidae_r"
                android:text="@string/add_contact_placeholder_wrong_memo"
                android:visibility="invisible"
                android:layout_marginStart="3dp"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_memo"
                app:layout_constraintTop_toBottomOf="@+id/cl_add_contact_memo" />

            <android.widget.Button
                android:id="@+id/btn_add_contact_cancel"
                android:text="@string/common_cancel"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/yeonaesidae_b"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn"
                app:layout_constraintTop_toBottomOf="@id/cl_add_contact_memo"
                app:layout_constraintStart_toStartOf="@id/cl_add_contact_memo"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <android.widget.Button
                android:id="@+id/btn_add_contact_save"
                android:text="@string/common_save"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/yeonaesidae_b"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:background="@drawable/btn"
                app:layout_constraintTop_toTopOf="@id/btn_add_contact_cancel"
                app:layout_constraintEnd_toEndOf="@id/cl_add_contact_memo"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>