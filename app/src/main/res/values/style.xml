<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="headline_b">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="headline">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="subtitle_b">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="subtitle">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textFontWeight">300</item>
    </style>

    <style name="body_b">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="body">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="description_b">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="description">
        <item name="fontFamily">@font/yeonaesidae</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/yeonaesidae</item>
    </style>

    <style name="HeartRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_heart</item>
    </style>

    <style name="HeartRatingBarSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_bar_heart_small</item>
    </style>

    <style name="BirthdayDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="EventDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="colorAccent">@color/secondary</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="EventTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="colorControlNormal">@color/secondary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>